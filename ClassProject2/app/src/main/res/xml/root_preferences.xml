<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Tracking">

        <SwitchPreferenceCompat
            app:key="tracking_enabled"
            app:title="Enable Tracking"
            app:defaultValue="false" />

        <EditTextPreference
            app:key="step_goal"
            app:title="Step Goal"
            app:dialogTitle="Enter your daily step goal"
            app:useSimpleSummaryProvider="true"
            android:inputType="number" />

        <Preference
            app:key="notification_time"
            app:title="Notification Time"
            app:summary="Select a time for daily notification" />

        <Preference
            app:key="reset_app"
            app:title="Reset App"
            app:summary="Clear all step history and reset settings"
            android:icon="@android:drawable/ic_menu_delete" />

    </PreferenceCategory>

</PreferenceScreen>
